<div class="container">

  <h1 class="text-center"><%=@list.name.upcase%></h1>
  <br>
  <br>
  <div class="d-flex justify-content-around">
    <%@list.movies.each do |movie|%>
      <div class="card" style="width: 18rem;">
        <%= image_tag movie.poster_url %>
        <div class="card-body">
          <h5 class="card-title"><strong><%= movie.title%> <br><%= movie.rating%>/10</strong></h5>
          <p class="card-text"><%= movie.overview%></p>
          <%# <%= link_to "Add a bookmark", new_list_bookmark_path(@bookmark, @list)%>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= bookmark.comment %>
          <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %>
        </div>
      </div>
    <%end%>
  </div>
  <br>
  <%= link_to "Add a movie to this list", new_list_bookmark_path(@list, @bookmark)%>
  <br>

</div>
